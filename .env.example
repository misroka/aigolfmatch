# Environment Configuration

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=golf_clubs
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=require  # Required for Azure PostgreSQL, remove for local

# Web Application Security
SECRET_KEY=your_secret_key_here_change_this_in_production
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=pbkdf2:sha256:600000$xyz123$hash_here

# Flask Settings
FLASK_DEBUG=False
FLASK_ENV=production

# Web Scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY=2
MAX_RETRIES=3

# API Keys (if needed)
# GOLF_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/golf_scraper.log
